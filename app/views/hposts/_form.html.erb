<div class="parent">
    <div class="child">
        <header>
            <h1>Make Your Pssoster</h1>
        </header>
  
        <div class="input_form row">
            
            <div class="form-group"> 
            
                <input type="text" class="form-control" id="content1" placeholder="Title">
            
            </div>
            
            <div class="form-group">
            
                <textarea type="text" class="form-control" id="content2" placeholder="Detail" ></textarea>
            
            </div>
            
            <div class="form-group">
            
                <input type="text" class="form-control" id="content3" placeholder="Address">
            
            </div>
            
            <div class="form-group">
            
                <%= simple_form_for @hpost,remote:true, html: {multipart: true} do |f| %>
            
                    <div class="field">
            
                        <%= f.input :picture, as: :file %>
            
                        <%= f.hidden_field :picture_cache %>
            
                    </div>
            
                    <%= f.hidden_field :htmltag ,value:"",id:"htmltag" %>
            
                    <br>
            
                    <div class="actions">
            
                        <%= f.submit id:"submit_poster" %>
            
                    </div>
            
                    <a href="/hposts/<%=@hpost.id%>">완 료</a>
                <% end %>
            
            </div>
        
        </div>
    
    </div>
    

  <!-- 오른쪽 poster -->
    <div class="child" id="here">
        <div class="poster" id="html-content-holder"> 
            <div class="text_content" id = "pt_content1"></div>
            <div id = "pt_picture">
                <form runat="server">
                    <img id="pt_picture_input" src="#"/>
                </form>
            </div>
            <div class="text_content" id = "pt_content2"></div>
            <div class="text_content" id = "pt_content3"></div>
        </div>
    </div>
    
</div>
<a id="btn-Convert-Html2Image" href="#" ></a>
<button type="submit" class="btn-EditSubmit">Submit</button>

 

